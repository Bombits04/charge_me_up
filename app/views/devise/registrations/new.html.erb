

<style>
  .login-page {
      width: 100%;
      height: 100vh;
      display: inline-block;
      display: flex;
      align-items: center;
      top: 0;
      left: 0;
      position:absolute;
      z-index: -1;
  }
  .form-right i {
      font-size: 100px;
  }

  .login-img{
      width: 100%;
      height: 100%;
      object-fit: contain;
  }
 
}
</style>


<div class="login-page bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">

                  <h3 class="mb-3">Signup</h3>
                    <div class="bg-white shadow rounded">
                        <div class="row">
                            <div class="col-md-7 pe-0">
                                <div class="form-left h-100 py-5 px-5">
                                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "row g-4" }) do |f| %>
                                      

                                            <div class="col-12">
                                                <%= f.label :email %> <span class="text-danger">*</span>
                                                <div class="input-group">
                                                    <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <%= f.label :username %> <span class="text-danger">*</span>
                                                <div class="input-group">
                                                    <div class="input-group-text"><i class="bi bi-envelope-fill"></i></div>
                                                    <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Enter username" %>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <%= f.label :password %> <span class="text-danger">*</span> 
                                                    <% if @minimum_password_length %>
                                                      <em class="fst-italic text-secondary">(<%= @minimum_password_length %> characters minimum)</em>
                                                    <% end %>
                                                <div class="input-group">
                                                    <div class="input-group-text"><i class="bi bi-lock-fill"></i></div>
                                                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter password" %>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <%= f.label :password_confirmation %> <span class="text-danger">*</span> 
                                                <div class="input-group">
                                                    <div class="input-group-text"><i class="bi bi-lock-fill"></i></div>
                                                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Enter password confirmation" %>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                              <%= f.submit "Sign up", class: "btn btn-primary px-4 float-end mt-4" %>
                                            </div>
                                      <% end %>
                                </div>
                            </div>
                            <div class="col-md-5 ps-0 d-none d-md-block">
                                <div class="form-right h-100 bg-primary text-white text-center">
                                  <%= image_tag "login_pic.jpg", alt: "Login Pic", class: "object-fit-cover", style: "width: 100%; height:100%;" %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="text-end text-secondary mt-3"></p>
                </div>
            </div>
        </div>
    </div>